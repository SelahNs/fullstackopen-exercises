{
  "name": "backend-practice",
  "version": "1.0.0",
  "description": "My first Node backend",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "build:ui": "rm -rf dist && cd ../frontend && npm run build && cp -r dist ../backend",
    "deploy:full": "npm run build:ui && cd .. && git add . && git commit -m uibuild && git push",
    "dev": "cross-env NODE_ENV=devlopment node --watch index.js",
    "test": "cross-env NODE_ENV=test node --test",
    "lint": "eslint"
  },
  "author": "Selah",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@stylistic/eslint-plugin": "^5.8.0",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "supertest": "^7.2.2"
  }
}
